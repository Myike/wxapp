  height: 100%;
  box-sizing:border-box;
  background-image: url("https://www.tzwyun.top/images/img_1.jpg");
}

.title{
  text-align: center;
  width: 100%;
  height: 100px;
  line-height: 30px;
}

.about-view{
  width: 100%;
  height: 400px;
}

.text-content{
  width: 96%;
  height: 80%;
  text-align: center;
  margin: 0 4% 0 4%;
}

.login-btn{
  width: 400rpx;
  height: 80rpx;
  text-align: center;
