.about-content{
  width: 100%;
  box-sizing:border-box;
  background-color: #e6e6e6;
  padding: 0;
  margin: 0;
}

.title{
  text-align: center;
  width: 100%;
  height: 100px;
  line-height: 30px;
}

.about-view{
  width: 100%;
  height: 400px;
}

.text-content{
  width: 96%;
  height: 80%;
  text-align: center;
  margin: 0 4% 0 4%;
}

.login-btn{
  width: 400rpx;
  height: 80rpx;
  text-align: center;
  display: block;
  background-color: rgb(11, 156, 247);
  line-height: 80rpx;
  margin-left: 200rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}



.settings {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}

.message {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.about-top {
  width: 100%;
  height: 350rpx;
  background-color: rgb(83, 81, 81);
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-icon {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  margin-top: 90rpx;
  text-align: center;
  font-size: medium;
}

.userinfo-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 10rpx;
  color: #aaa;
}

.about-bottom {
  width: 100%;
}

.about-item {
  width: 100%;
  height: 150rpx;
  background-color: rgb(252, 246, 246);
  margin-top: 15rpx;
}